page('p-about', $color_aqua)

+module('p-about')
    h1
        font bold 36px/48px sans-serif

    h2
        font bold normal 24px/36px sans-serif

    p
        margin-bottom 10px

    li
        list-style square inside

    code
        font-family monospace
        color $color_white
        background $color_aqua
        border-radius 2px
        padding 2px

    b
        font-weight bold

    a
        color $color_blue
        text-decoration underline

        &:hover
            color $color_red
