$color_red = #f00;
$color_green = #080;
$color_blue = #00f;
$color_white = #fff;
$color_gray = #888;
$color_black = #000;
$color_aqua = #088;
$color_orange = #f80;

module()
    :root /deep/ {arguments}
        {block}

page(page, color)
    :root /deep/ {page}
        width 100%
        height 100%

    :root /deep/ {page}::shadow
        .container
            relative top 0 left 0
            box-sizing border-box
            padding 20px 20px 40px 20px
            width 100%
            height 100%

        .border
            fixed top 0 left 0
            box-sizing border-box
            background color
            height 0
            width 0

            &.up,
            &.down
                width 100%

            &.left,
            &.right
                height 100%

            &.up
                height 40px

            &.right
                width 210px
                left auto
                right 0

            &.down
                height 40px
                top auto
                bottom 0

            &.left
                width 20px

        .title
            font bold 16px/30px sans-serif
            color $color_white
            margin-left 20px
